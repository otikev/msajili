<div class="col-sm-4"></div>
<div class="col-sm-4">
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="form-signin-heading"><b><%= Role.role_name(role).capitalize %> Sign In</b></h2>
  </div>
  <div class="panel-body">
    <%= form_for @user, url: signin_path, html: {role:'form'} do |f| %>

                <%= f.hidden_field :role, :value => role %>

                <div class="row">
                    <div class="col-sm-12">
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                        <%= f.text_field :email,class:'form-control',placeholder:'Email address', :required=>true %>
                      </div>
                    </div>
                </div><br/>
                <div class="row margin-bottom-sm">
                    <div class="col-sm-12">
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                        <%= f.password_field :password, class:'form-control',placeholder:'Password', :required=>true %>
                      </div>
                    </div>
                </div>
        <div class="row padding-10"></div>
                <div class="row">
                    <div class="col-sm-12">
                        <%= f.label :remember_me do %>
                        <%= f.check_box :remember_me %>
                            Remember me
                        <% end %>
                    </div>
                </div>
                <div class="row">
                  <div class="col-sm-3"></div>
                  <div class="col-sm-6">
                    <%= f.submit 'Sign in', class: 'btn btn-large btn-primary btn-block' %>
                  </div>
                  <div class="col-sm-3"></div>
                </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <div class="row">
      <div class="col-sm-12 text-center">
        <%= link_to 'Forgot password?', password_recovery_tool_path %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 text-center">
        <% if role != Role.applicant %>
            <p>New employer? <%= link_to 'Sign up now!', register_path(package:Package::FREE) %></p>
        <% else %>
            <p>New job seeker? <%= link_to 'Sign up now!', signup_path %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
<div class="col-sm-4"></div>