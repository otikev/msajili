<% provide(:title, 'Password Recovery Tool') %>
<div class="col-sm-3"></div>
<div class="col-sm-6 padding-40">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2><b>Password Recovery Tool</b></h2>
    </div>
    <div class="panel-body">
      <div class="col-sm-12 text-center">
        Forgot your password? Simply enter your email address below. Directions for resetting your password will be emailed to you. This password request will expire within 24 hours.
      </div>
      <div class="col-sm-12 text-center">
        <div class="col-sm-2"></div>
        <%= form_tag(password_recovery_tool_path, html: {class: 'form-horizontal col-sm-8',role:'form'}) do %>
            <div class="row padding-5">
              <%= text_field_tag(:email,'',class: 'form-control col-sm-12', :required=>true, :placeholder=>'Your email' ) %>
            </div>
            <div class="row padding-5">
              <div class="col-sm-1"></div>
              <div class="col-sm-10">
                <%= submit_tag('Recover My Password', :class =>'btn btn-primary btn-block') %>
              </div>
              <div class="col-sm-1"></div>
            </div>
        <% end %>
        <div class="col-sm-2"></div>
      </div>
    </div>
  </div>
</div>
<div class="col-sm-3"></div>