<% provide(:title, 'Dashboard') %>
<div class='row'>
  <div class="col-sm-8">
    <div class='row'>
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Uploaded files
          </div>
         </div>
      </div>
      <div class="col-sm-12">
          <table id="uploads" class="table table-striped small_font" data-role="upload" data-returnto="<%= @current_url %>">
            <thead>
            <tr>
              <th>Type</th>
              <th>Description</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div>
      <div class="panel panel-default">
        <div class="panel-heading">
          Upload
        </div>
        <div class="panel-body">
          <%= form_for(@upload, url: upload_path) do |f| %>
              <%= f.hidden_field :user_id%>
              <div class="form-group">
                <div class="col-sm-12">
                  <%= f.select :upload_type,"<option value=\"1\">CV</option><option value=\"2\">Certificate</option><option value=\"3\">Other</option>".html_safe %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :description, class: 'col-sm-12' %>
                <div class="col-sm-12">
                  <%= f.text_field :description, :required=>true   %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <%= f.file_field :file, :required=>true   %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-12">
                  <%= f.submit 'Upload', class: 'btn btn-primary' %>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
