
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left info">
        <p><%= @current_user.first_name %></p>
        <p><small><%= role_name %></small></p>
      </div>
    </div>
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="<%= 'active' if current_page?('/dashboardadmin') %>">
          <%= link_to dashboardadmin_path, :title => 'Dashboard' do %>
            <i class="fa fa-dashboard"></i><span>Dashboard</span>
          <% end %>
      </li>
      <li class="<%= 'active' if current_page?('/company_dashboard') %>">
        <%= link_to company_dashboard_path, :title => 'Company' do %>
            <i class="fa fa-building-o"></i> <span>Company</span>
        <% end %>
      </li>
      <li class="<%= 'active' if current_page?('/recruiters') %>">
        <%= link_to recruiters_path, :title => 'Recruiters' do %>
            <i class="fa fa-group"></i> <span>Recruiters</span>
        <% end %>
      </li>
      <li class="<%= 'active' if current_page?('/jobs_dashboard') %> treeview">
        <a href="#">
          <i class="fa fa-briefcase"></i><span>Jobs</span><i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to jobs_dashboard_path(:status => 0), :title => 'All' do %>
                <i class="fa fa-circle-o"></i>All
                <span class="label label-primary pull-right"><%= Job.count_for_status(@current_user.company.id,0) %></span>
            <% end %>
          </li>
          <li>
            <%= link_to jobs_dashboard_path(:status => Job.status_draft), :title => 'Draft' do %>
                <i class="fa fa-circle-o text-default"></i>Draft
                <span class="label label-primary pull-right"><%= Job.count_for_status(@current_user.company.id,Job.status_draft) %></span>
            <% end %>
          </li>
          <li>
            <%= link_to jobs_dashboard_path(:status => Job.status_unpublished), :title => 'Unpublished' do %>
                <i class="fa fa-circle-o text-primary"></i>Unpublished
                <span class="label label-primary pull-right"><%= Job.count_for_status(@current_user.company.id,Job.status_unpublished) %></span>
            <% end %>
          </li>
          <li>
            <%= link_to jobs_dashboard_path(:status => Job.status_open), :title => 'Open' do %>
                <i class="fa fa-circle-o text-success"></i>Open
                <span class="label label-primary pull-right"><%= Job.count_for_status(@current_user.company.id,Job.status_open) %></span>
            <% end %>
          </li>
          <li>
            <%= link_to jobs_dashboard_path(:status => Job.status_expired), :title => 'Expired' do %>
                <i class="fa fa-circle-o text-warning"></i>Expired
                <span class="label label-primary pull-right"><%= Job.count_for_status(@current_user.company.id,Job.status_expired) %></span>
            <% end %>
          </li>
          <li>
            <%= link_to jobs_dashboard_path(:status => Job.status_closed), :title => 'Closed' do %>
                <i class="fa fa-circle-o text-danger"></i>Closed
                <span class="label label-primary pull-right"><%= Job.count_for_status(@current_user.company.id,Job.status_closed) %></span>
            <% end %>
          </li>
        </ul>
      </li>
      <li class="<%= 'active' if current_page?('/calendar') %>">
        <%= link_to calendar_path, :title => 'Calendar' do %>
            <i class="fa fa-calendar"></i> <span>Calendar</span>
        <% end %>
      </li>
      <li class="<%= 'active' if current_page?('/templates_dashboard') %> treeview">
        <a href="#">
          <i class="fa fa-files-o"></i><span>Templates</span><i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to templates_dashboard_path, :title => 'Templates' do %>
              <i class="fa fa-circle-o"></i>Templates
            <% end %>
          </li>
          <li>
            <%= link_to procedures_dashboard_path, :title => 'Procedures' do %>
              <i class="fa fa-circle-o"></i>Procedures
            <% end %>
          </li>
        </ul>
      </li>
      <li class="<%= 'active' if current_page?('/payments_dashboard') %>">
        <%= link_to payments_dashboard_path, :title => 'Payments' do %>
          <i class="fa fa-credit-card"></i> <span>Payments</span>
        <% end %>
      </li>
      <li class="<%= 'active' if current_page?('/settings') %>">
        <%= link_to settings_path, :title => 'Settings' do %>
            <i class="fa fa-cogs"></i> <span>Settings</span>
        <% end %>
      </li>
      <li class="<%= 'active' if current_page?('/contact') %>">
        <%= link_to contact_path, :title => 'Feedback' do %>
            <i class="fa fa-phone"></i> <span>Feedback</span>
        <% end %>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>