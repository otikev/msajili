<div class="panel panel-default">
  <div class="panel-heading">
    Filter
  </div>
  <div class="panel-body">
    <%= form_for(:filter, url: processjob_path, method: 'get') do |f|%>
        <%= f.hidden_field :t, :value => @job.token %>
        <div>
            <%= f.label :only_active do %>
                <%= f.check_box :only_active, {:checked => @only_active}, 'true', 'false' %>
                View only active applications
            <% end %>
        </div>
        <div><%= f.submit('Filter',class: 'btn btn-success') %></div>
    <% end %>
  </div>
</div>