<div class="modal fade" id="<%=modal_id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Advance Application</h4>
      </div>
      <div class="modal-body">
       	This action will move the applicant to the next stage in your recruitment procedure.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        <%= link_to "Advance", advanceapplicant_path(application_id: @application.id),class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>