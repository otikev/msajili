
<div class="row">
<div class="col-sm-2"></div>
<%= nested_form_for @current_user,url: saveprofile_path, html: {class: "col-sm-8",role:"form"} do |f| %>
	
	<div class="breadcrumb">
		<h3>Details</h3>
		<%= f.hidden_field :role%>
		<div class="row">
			<div class="col-sm-5"><%= f.label :first_name %></div>
			<div class="col-sm-5"><%= f.label :last_name %></div>
		</div>
		<div class="row">
			<div class="col-sm-5"><%= f.text_field :first_name,placeholder:"First name", class: "btn-block"%></div>
			<div class="col-sm-5"><%= f.text_field :last_name,placeholder:"Last name", class: "btn-block"%></div>
		</div>
		<div class="row">
			<div class="col-sm-5"><%= f.label :country %></div>
			<div class="col-sm-5"><%= f.label :city %></div>
		</div>
		<div class="row">
			<div class="col-sm-5">
				<%= country_select("user", "country", { selected: @current_user.country },{:class => "btn-block"})%>
			</div>
			<div class="col-sm-5"><%= f.text_field :city,placeholder:"City",class: "btn-block"%></div>
		</div>
		</br></br>
		<div class="row">
			<div class="col-sm-2">
				<%= f.submit "Update", :class => "btn btn-lg btn-success btn-block" %>	
			</div>
			<div class="col-sm-10"></div>
		</div>
	</div>
	<% if @current_user.role == 3 %>
	<div class="breadcrumb">
		<h3>Academic Qualifications</h3>
		<div id="ac_qual">
			<%= f.fields_for :academic_qualifications %>
		</div>
		<div>
			<%= f.link_to_add "Add Qualification", :academic_qualifications %>
		</div>
		</br>
		<div class="row">
			<div class="col-sm-2">
				<%= f.submit "Update", :class => "btn btn-lg btn-success btn-block" %>	
			</div>
			<div class="col-sm-10"></div>
		</div>
	</div>
	
	<div class="breadcrumb">
		<h3>Work History</h3>
		<div id="refs">
			<%= f.fields_for :employers %>
		</div>
		<div>
			<%= f.link_to_add "Add Employer", :employers %>
		</div>
		
		</br>
		<div class="row">
			<div class="col-sm-2">
				<%= f.submit "Update", :class => "btn btn-lg btn-success btn-block" %>	
			</div>
			<div class="col-sm-10"></div>
		</div>
	</div>
	
	<div class="breadcrumb">
		<h3>Referees</h3>
		<div id="refs">
			<%= f.fields_for :referees %>
		</div>
		<div>
			<%= f.link_to_add "Add Referee", :referees %>
		</div>
		
		</br>
		<div class="row">
			<div class="col-sm-2">
				<%= f.submit "Update", :class => "btn btn-lg btn-success btn-block" %>	
			</div>
			<div class="col-sm-10"></div>
		</div>
	</div>
	<%end%>
	</br>
<% end %>
<div class="col-sm-2"></div>
</div>
