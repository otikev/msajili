<div class="row">
<div class="col-sm-2"></div>
<div class="col-sm-8">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1><b>Edit Template</b></h1>
    </div>
    <div class="panel-body">
      <%= form_for(@template, url: savetemplate_path, html: {class: "form-horizontal",role:"form"}) do |f| %>
          <%= f.hidden_field :company_id %>
          <%= f.hidden_field :id %>
          <div class="row padding-5">
            <div class="col-sm-12">
              <%= f.label :title,"Title", class: "control-label" %>
              <%= f.text_field :title, class: "form-control", :required=>true %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
              <%= f.submit 'Save', class: 'btn btn-primary btn-block' %>
            </div>
            <div class="col-sm-3"></div>
          </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-sm-2"></div>
</div>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Questions</h2>
      </div>
      <div class="panel-body">
        <%= render '/shared/questions_container', :job_id => nil, :template_id => @template.id %>
      </div>
    </div>
  </div>
  <div class="col-sm-2"></div>
</div>