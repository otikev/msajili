<% provide(:title, 'New recruiter') %>
<div class="row">
	<div class="col-sm-3"></div>
    <div class="col-sm-6">
    <%= form_for(@user, html: {class: "form-horizontal",role:"form"}) do |f| %>
          <div class="panel panel-default">
            <div class="panel-heading">
            <h1><b>New Recruiter</b></h1>
              </div>
            <div class="panel-body">
          <%= render 'shared/error_messages', object: f.object %>
		
		<%= f.hidden_field :role,:value => Role.recruiter %>
		<%= f.hidden_field :company_id,:value => @user.company.id %>
		<%= f.hidden_field :country,:value => '-' %>
		<%= f.hidden_field :city,:value => '-' %>
		
		<div class="form-group">
			<%= f.label :first_name,'Name', class: 'col-sm-12' %>
			<div class="col-sm-12">
				<%= f.text_field :first_name, class: 'form-control', :required=>true %>
			</div>
	   	</div>
          <div class="form-group">
            <%= f.label :email, class: 'col-sm-12'  %>
            <div class="col-sm-12">
              <%= f.text_field :email, class: 'form-control', :required=>true  %>
            </div>
          </div>
		<div class="form-group">
			<%= f.label :password, class: 'col-sm-12'  %>
			<div class="col-sm-12">
				<%= f.password_field :password, class: 'form-control', :required=>true %>
			</div>
	    </div>
		<%= f.submit 'Add Recruiter', class: 'btn btn-large btn-success ' %>
          </div>
          </div>
    <% end %>
    </br></br>
</div>
	<div class="col-sm-3"></div>
</div>
