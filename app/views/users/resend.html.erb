<div class="col-sm-12"><br/>
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2><b>Resend activation</b></h2>
        </div>
        <div class="panel-body">
            <%= form_for(:activate, url: resend_path, method: 'post',html: {role:"form"}) do |f|%>
            <div class="form-group row">
                <div class="col-sm-12">
                    <%= f.label :email,'Email',class: "col-sm-4" %>
                    <%= f.text_field :email, class: "col-sm-8" %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <div class="col-sm-4"></div>
                    <div class="col-sm-4"><%= f.submit('Resend activation',class: 'btn btn-large btn-success') %></div>
                    <div class="col-sm-4"></div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
    </div>
<div class="col-sm-3"></div>
</div>

